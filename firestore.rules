rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    function isEditor() {
      return hasRole('editor');
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function hasRole(role) {
      return request.auth != null && get(/databases/$(database)/documents/kasutajad/$(request.auth.uid)).data[role] == true;
    }

    match /kasutajad/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
    }

    match /uudised/{uudis} {
      allow read;

      allow create: if isAdmin() || (request.auth != null && request.resource.data.autor.uid == request.auth.uid && isEditor());
      allow update: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.autor.uid && request.resource.data.autor.uid == resource.data.autor.uid && isEditor());
      allow delete: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.autor.uid && isEditor());

      match /kommentaarid/{kommentaar} {
        allow read;

        allow create: if isAdmin() || (request.auth != null && request.resource.data.autor.uid == request.auth.uid);
        allow update: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.autor.uid && request.resource.data.autor.uid == resource.data.autor.uid);
        allow delete: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.autor.uid);
      }
    }
  }
}
